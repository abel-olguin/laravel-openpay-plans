{
    "name": "abel-olguin/laravel-openpay-plans",
    "description": "Librería para manejar planes con Laravel y la plataforma de pago Openpay.",
    "tags": ["subscriptions", "suscripciones", "pagofacil", "openpay"],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AbelOlguin\\OpenPayPlans\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Abel olguín",
            "email": "osmer19@hotmail.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "AbelOlguin\\OpenPayPlans\\PlansProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "openpay/sdk": "^3.0",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
      "orchestra/testbench": "^8.18",
      "phpunit/phpunit": "^10.5"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },

}
